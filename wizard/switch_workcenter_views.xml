<odoo>
    <record id="switch_workcenter_wizard_form" model="ir.ui.view">
        <field name="name">switch.workcenter.wizard.form</field>
        <field name="model">switch.workcenter</field>
        <field name="arch" type="xml">
            <form string="Inventory Transfer Wizard">
                <field name="product_id" invisible="1"/>
                <p><strong>La cantidad producida es mayor a la capacidad del centro de trabajo, Por favor escoja múltiples ubicación</strong></p>
                    <field name="workcenter_ids" nolabel="1" colspan="2">
                        <tree editable="bottom">
                            <field name="workcenter_id"/>
                            <field name="capacity_used" required="select == True" sum="capacity_used"/>
                            <field name="capacity" readonly="1" force_save="1"/>
                            <field name="lote" readonly="1" force_save="1"/>
                            <field name="select"/>
                        </tree>
                    </field>
                <footer>
                    <button string="Aceptar" type="object" name="action_switch_workcenter" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo> 