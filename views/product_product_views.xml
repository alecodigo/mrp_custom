<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_product_form_view" model="ir.ui.view">
        <field name="name">product.product.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']/span[hasclass('d-inline-block')][last()]" position="after">
                <span class="d-inline-block">
                    <field name="by_product"/>
                    <label for="by_product"/>
                </span>
            </xpath>
        </field>
    </record>
</odoo>